import numpy as np
A = np.array([[3,2],[4,1]])
print(A)
print()

eigenvalue, eigenvector = np.linalg.eig(A)
print("Eigen Value: ")
print(eigenvalue)
print()
print("Eigen Vector: ")
print(eigenvector)
print()
print("the first eigenvalue-eigenvector pair")
print(eigenvalue[0]*eigenvector[:, 0])
print(np.dot(A, eigenvector[:, 0])
print()
print("the second eigenvalue-eigenvector pair")
print(eigenvalue[1]*eigenvector[:, 1])
print(np.dot(A, eigenvector[:, 1])
print()
